# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET         /login                                      controllers.Application.login
# Home page
GET         /                                           controllers.Application.index

POST        /mask/:maskId/documents/new                 controllers.DocumentController.newDoc(maskId: String)

POST        /mask/:maskId/documents/releases/new        controllers.DocumentController.newRelease(maskId: String)

POST        /releases/documents/add                     controllers.DocumentController.pushToRelease

POST        /mask/new                                   controllers.DocumentController.newMask(repo: String)

POST        /repository/new                             controllers.RepositoryController.newRepo(name: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                               controllers.Assets.at(path="/public", file)

